
grammar SimpleHTML
	rule document
		(foo / text / tag)* {
			def content
				elements.map {|e| e.content}
			end
		}
	end

	rule foo
		"foo" {
			def content
				[:foo, text_value]
			end
		}
	end

	rule text
		[^<]+ {
			def content
				[:text, text_value]
			end
		}
	end

	rule tag
		"<" [^>]+ ">" {
			def content
				[:tag, text_value]
			end
		}
	end
end
